<%= link_to "back to report", events_path %>
<%= link_to "home", user_path(@event.user_id) %>
<div class="show_content">
<h1><%= @event.title.titleize %></h1> 
on <%= @event.date %> from <%=@event.start_time%> until <%=@event.end_time %>
<p><%= @event.description%></p>

<%= link_to "Edit", edit_event_path(@event)%> <%= link_to "Delete", event_path(@event), method: 'delete' %><br>
<h3><button data-event="<%=@event.id%>" id="eventTasks" onclick="getTasks(this); return false;" type="button">TO DO</button> </h3>
<hr>


<div id="tasks"></div>

</div>

<h2 class="home_page">Add a Task</h2>


<div class="new_task_form">
  <%= form_for @task, :url => "/tasks_from_event" do |f| %>
      <%= f.label :event_id %>
      <%= f.collection_select :event_id, current_user.events, :id, :title, {:prompt => "Select Related Event"}%><br>
      <%= f.label :description %>
      <%= f.text_field :description %><br>
      <%= f.label :status %>
      <%= f.text_field :status %><br>
      <%=f.submit "Create Task"%>
  <% end %>
</div> 
